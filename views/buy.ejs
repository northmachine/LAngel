<script type="text/javascript">
    function getid(textID)
    {
        _id=textID;
        //console.log(_id);
    }
    function confirmed(){


        $.ajax({
            url: "/ajax/buyGood",//url
            type: 'POST',
            data: {user_name:"<%=user_name%>",good_id:_id},
            async: false,
            dataType: 'json',
            timeout: 1000,
            cache: "false",
            error: erryFunction,  //错误执行方法
            success: succFunction //成功执行方法

        });
        function erryFunction(XMLHttpRequest, textStatus, errorThrown)
        {
            alert("网页访问失败");
            $("#list").html(XMLHttpRequest.status);
            $("#list").html(XMLHttpRequest.readyState);
            $("#list").html(textStatus);
        }
        function succFunction(json)
        {
            var _qrString = json.qrstring;
            var qrcode = new QRCode(document.getElementById("qrcode"), {
                width : 100,
                height : 100
            });

            function makeCode () {

                qrcode.makeCode(_qrString);
            }
            makeCode();



        }

    }


</script>
