            return false;
        }
        if(document.getElementById('id4').value.length==0){
            alert('医院输入不能为空！');
            document.getElementById('id4').focus();
            return false;
        }
        if(document.getElementById('id5').value.length==0){
            alert('医生输入不能为空！');
            document.getElementById('id5').focus();
