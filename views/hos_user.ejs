<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.1/Chart.min.js"></script>


<script type="text/javascript" >
    $(function () {
        $.ajax({
            data:{user_name:"<%=user_name%>"},
            url: "/ajax/init_user_info",//url
            type: 'post',
            async: false,
            dataType: 'json',
            timeout: 1000,
            cache: "false",
            beforeSend: LoadFunction, //加载执行方法
            error: erryFunction,  //错误执行方法
            success: succFunction //成功执行方法
        })

        function LoadFunction()
        {
            //$("#list").html('加载中...');
        }

        function erryFunction(XMLHttpRequest, textStatus, errorThrown)
        {
            //$("#list").html(XMLHttpRequest.status);
            //$("#list").html(XMLHttpRequest.readyState);
            //$("#list").html(textStatus);
        }

        function succFunction(json)
        {
            console.log(json);
            var usernamejson = json.username;
            var heightjson = json.height;
            var weightjson = json.weight;
            var agejson = json.age;
            var sexjson = json.sex;
            var casejson = json.case;

            $("#username").append(usernamejson);
            $("#height").append(heightjson);
            $("#weight").append(weightjson);
            $("#age").append(agejson);
            $("#sex").append(sexjson);

            $.each(casejson, function (index, item)
            {
                //循环获取数据
                var _illness = casejson[index].illness;
                var _time = casejson[index].time;
                var _doctor = casejson[index].doctor;
                var _symptom = casejson[index].symptom;
                var _cure = casejson[index].cure;
                var _hospital = casejson[index].hospital

                $("#accordion").append('<h3 class="ui-accordion-header ui-corner-top ui-state-default ui-accordion-icons ui-accordion-header-collapsed ui-corner-all" role="tab" id="ui-id-3" aria-controls="ui-id-4" aria-selected="false" aria-expanded="false" tabindex="-1"><span class="ui-accordion-header-icon ui-icon ui-icon-triangle-1-e"></span><label id="illness_2" name="illness_2">'
                    +_illness+'</label><label id="time_2" name="time_2">'+_time+'</label></h3>');
                $("#accordion").append('<div style="display: block; height: 125px;" class="ui-accordion-content ui-corner-bottom ui-helper-reset ui-widget-content ui-accordion-content-active" id="ui-id-4" aria-labelledby="ui-id-3" role="tabpanel" aria-hidden="false"><label id="hospital_2" name="hospital_2">'
                    +_hospital+'</label><label id="doctor_2" name="doctor_2">'+_doctor+'</label><br><label id="symptom_2" name="symptom_2">'+_symptom+'</label><br><label id="cure_2" name="cure_2">'+_cure+'</label></div>');
            });
            $("#accordion").accordion("refresh");


            //7天心率图
            var _rate = json.rate;

            var ctxx = document.getElementById("rate7Chart");
            var rate7Chart = new Chart(ctxx, {
                type: 'line',
                data: {
                    labels: ["第一天", "第二天", "第三天", "第四天", "第五天", "第六天","第七天"],
                    datasets: [{
                        data:[_rate[6],_rate[5],_rate[4],_rate[3],_rate[2],_rate[1],_rate[0]],
                        lineTension: 0,
                        backgroundColor: 'transparent',
                        borderColor: '#007bff',
                        borderWidth: 4,
                        pointBackgroundColor: '#007bff'
                    }]
                },
                options: {
                    scales: {
                        yAxes: [{
                            ticks: {
                                beginAtZero: false
                            }
                        }]
                    },
                    legend: {
                        display: false,
                    }
                }
            });


            //7天步数图
            var _step = json.step;

            var ctxxxx = document.getElementById("step7Chart");
            var myChart = new Chart(ctxxxx, {
                type: 'line',
                data: {
                    labels: ["第一天", "第二天", "第三天", "第四天", "第五天", "第六天","第七天"],
                    datasets: [{
                        data:[_step[6],_step[5],_step[4],_step[3],_step[2],_step[1],_step[0]],
                        lineTension: 0,
                        backgroundColor: 'transparent',
                        borderColor: '#007bff',
                        borderWidth: 4,
                        pointBackgroundColor: '#007bff'
                    }]
                },
                options: {
                    scales: {
                        yAxes: [{
                            ticks: {
                                beginAtZero: false
                            }
                        }]
                    },
                    legend: {
                        display: false,
                    }
                }
            });

            //7天图-睡眠
            var _deep = json.deep;
            var _shallow = json.shallow;
            var _awake = json.awake;

            console.log(_deep);
            console.log(_shallow);
            console.log(_awake);
            var barChartData = {
                labels: ['第一天', '第二天', '第三天', '第四天', '第五天', '第六天', '第七天'],
                datasets: [
                    {
                        label: '清醒',
                        backgroundColor: "rgba(150,207,172)",
                        data: [_awake[6],_awake[5],_awake[4],_awake[3],_awake[2],_awake[1],_awake[0]]
                    },
                    {
                        label: '浅度睡眠',
                        backgroundColor: "rgba(251,219,187)",
                        data: [_shallow[6],_shallow[5],_shallow[4],_shallow[3],_shallow[2],_shallow[1],_shallow[0]]
                    },
                    {
                        label: '深度睡眠',
                        backgroundColor: "rgba(237,181,180)",
                        data: [_deep[6],_deep[5],_deep[4],_deep[3],_deep[2],_deep[1],_deep[0]]
                    }]
            };
            window.onload = function() {
                var sleep7chartctx = document.getElementById('sleep7Chart').getContext('2d');
                window.myBar = new Chart(sleep7chartctx, {
                    type: 'bar',
                    data: barChartData,
                    options: {
                        title: {display: true,},
                        tooltips: {
                            mode: 'index',
                            intersect: false
                        },
                        responsive: true,
                        scales: {
                            xAxes: [{stacked: true,}],
                            yAxes: [{stacked: true}]
                        }
                    }
                });
            };
        };
    });

</script>
<script type="text/javascript">
    function checkform(){
        if(document.getElementById('id1').value.length==0){
            alert('病名输入不能为空！');
            document.getElementById('id1').focus();
            return false;
        }
        if(document.getElementById('id2').value.length==0){
            alert('症状输入不能为空！');
